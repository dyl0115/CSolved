<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="store.csolved.csolved.domain.comment.mapper.CommentMapper">

    <insert id="insertComment" useGeneratedKeys="true" keyProperty="id">
        insert into comments(answer_id,
                             user_id,
                             anonymous,
                             content,
                             created_at,
                             deleted_at)
        values (#{answerId},
                #{userId},
                #{anonymous},
                #{content},
                #{createdAt},
                #{deletedAt});
    </insert>

    <resultMap id="answerCommentMap" type="store.csolved.csolved.domain.comment.service.dto.CommentDetailListRecord">
        <id property="answerId" column="answer_id"/>
        <collection property="comments" javaType="java.util.ArrayList"
                    ofType="store.csolved.csolved.domain.comment.service.dto.CommentDetailRecord">
            <id property="id" column="id"/>
            <result property="authorId" column="author_id"/>
            <result property="authorNickname" column="author_nickname"/>
            <result property="anonymous" column="anonymous"/>
            <result property="content" column="content"/>
            <result property="createdAt" column="created_at"/>
        </collection>
    </resultMap>

    <select id="getCommentsByAnswerIds" resultMap="answerCommentMap">
        select c.*,
        u.id author_id,
        u.nickname author_nickname
        from comments c
        left join users u on u.id = c.user_id
        <if test="list != null and list.size() > 0">
            where c.answer_id in
            <foreach collection="list" item="answerId" open="(" separator="," close=")">
                #{answerId}
            </foreach>
        </if>
    </select>

    <delete id="deleteCommentByCommentId">
        delete
        from comments
        where id = #{commentId}
    </delete>

</mapper>