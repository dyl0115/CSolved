<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="store.csolved.csolved.domain.tag.mapper.TagMapper">
    <insert id="insertTag" useGeneratedKeys="true" keyProperty="id">
        insert
        ignore into tags(name)
        values(
        #{name}
        );
    </insert>

    <select id="findTagsByNames">
        select *
        from tags
        where name in
        <foreach collection="list" item="name" open="(" separator="," close=")">
            #{name}
        </foreach>
    </select>

    <select id="findAllTagNames">
        select name
        from tags
    </select>

    <insert id="insertQuestionAndTag">
        insert
        into question_tags(question_id, tag_id)
        values (#{questionId}, #{tagId});
    </insert>

    <delete id="deleteQuestionAndTagByQuestionId">
        delete
        from question_tags
        where question_id = #{questionId};
    </delete>
</mapper>